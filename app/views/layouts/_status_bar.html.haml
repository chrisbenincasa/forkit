- if flash['flashes']
  %div.flashes
    - flash.each do |name, msg|
      %div.flash{:id => "flash_#{name}"}
        = msg
%div#status_bar
  %div.left
    = link_to 'Home', root_url
  %div.right
    - if current_user
      = link_to "Log Out", log_out_path
      = link_to "Invite", invite_path
      = link_to "Profile", current_user 
    - else
      %span
        = link_to 'Login', log_in_path, :remote => true
  %div.clearfix