%div#status_bar
  %div.left
    = link_to 'Home', root_url
    = form_tag("../search/recipes", :method => 'get') do
      = label_tag :q,'Search recipes: '
      = text_field_tag :q
      = submit_tag 'Search'
  %div.right
    - if current_user
      %span
        = "Howdy, #{current_user.name}"
        = link_to "Profile", current_user
        = link_to "Invite", invite_path
        = link_to "Log Out", log_out_path
    - else
      %span
        Howdy, stranger!
        /= link_to "Login", log_in_path 
        = link_to 'Login', log_in_path, :remote => true
        /%a.login_link{:href => '#'} Login