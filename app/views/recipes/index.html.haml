= content_for :add_javascripts do
  = javascript_include_tag 'infinite_recipes'
%div.recipe_index_header.show_header
  = link_to 'New Recipe', new_recipe_path, :class => 'pretty_button add' if current_user and current_user.is_activated?
  %h1 All Recipes
  %div.sorter
    = sortable 'name'
    = sortable 'created_at', 'Date'
    = sortable 'favorites', 'Forks'
= render :partial => 'recipes_overlay', :locals => {:recipes => @recipes, :type => 'recipe_index'}