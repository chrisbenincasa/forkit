%h1 Log In!
%div.regular_login
  = form_tag sessions_path do
    %p
      = label_tag :login
      = text_field_tag :login, params[:login]
    %p
      = label_tag :password
      = password_field_tag :password
    %p.button
      = submit_tag 'Log in!'
%div.facebook_login
  = link_to 'Login with Facebook', '/auth/facebook'
  


