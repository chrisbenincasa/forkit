%div.lightbox
  %div.lightbox_content
    %div.facebook_login.left
      %div
        %p
          Log in with Facebook to share recipes with your friends.
        = link_to (image_tag 'facebook-login.png'), '/auth/facebook'
    %div.regular_login.right
      %div
        %p Log in with your email address and password.
        = form_tag sessions_path do
          %div.email
            = label_tag :login, 'e-mail address', {:class=>'email_label'}
            = text_field_tag :login, params[:login]
          %div.password
            = label_tag :password, 'password', {:class=>'password_label'}
            = password_field_tag :password
          = link_to 'Forgot your password?', new_password_reset_path 
          %br/
          = link_to 'Register now!', new_user_path
          %br/
          = submit_tag 'Login!', :class => 'pretty_button'
    %div.clearfix