= form_for(@ingredient) do |f|
  = if @ingredient.errors.any?
    %div#error_explaination
      %h2= pluralize(@ingredient.errors.count, 'error') 
      %ul
        = @ingredient.errors.full_message.each do |msg|
          %li= msg
  %div.field
    = f.label :name
    %br/
    = f.text_field :name
  %div.actions
    = f.submit