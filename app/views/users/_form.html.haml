= form_for @user do |f|
  - if @user.errors.any?
    %div.errors
      %h2 Form is invalid
      %ul
      - @user.errors.full_messages.each do |message|
        %li
          = message
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p.button
    = f.submit 