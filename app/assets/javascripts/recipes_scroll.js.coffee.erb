$(document).ready (e) ->
  page = 1
  loading = false
  totalPages = Math.ceil(<%= Recipe.count / 8.0 %>)

  $(window).on 'popstate', (e) ->
    console.log history

  $('.turn_page a').click (e) ->
    e.preventDefault()
    if page == totalPages
      return
    if loading
      return
    loading = true
    page++
    $.ajax
      url: '/recipes?page='+page
      type: 'get'
      dataType: 'script'
      success: ->
        console.log 'success'
        loading = false
        #history.pushState {currentPage: page}, '', '/recipes?page='+(page-1)
      error: (xhr, status, code) ->
        console.log status, code, 'why'
